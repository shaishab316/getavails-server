model Event {
  id           String   @id @default(uuid())
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  published_at DateTime @default(now())

  status       EEventStatus @default(UPCOMING)
  title        String
  description  String
  images       String[]     @default([])
  location     String
  ticket_price Float
  capacity     Int
  start_date   DateTime
  end_date     DateTime
  artist_names String[]
  organizer_id String

  organizer User @relation(fields: [organizer_id], references: [id])

  @@map("events")
}

enum EEventStatus {
  UPCOMING
  PUBLISHED
  TIMEOUT
}
